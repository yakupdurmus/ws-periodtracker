{
  "name": "nodetest",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./index.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "tsc && node dist/app.js",
    "live": "npx nodemon index.ts",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/joi": "^17.2.3",
    "@types/mysql": "^2.15.20",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "express": "^4.17.2",
    "joi": "^17.6.0",
    "knex": "^1.0.2",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0"
  }
}
